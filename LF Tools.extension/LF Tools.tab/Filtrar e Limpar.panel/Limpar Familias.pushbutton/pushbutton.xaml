<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Configurar Limpeza de Famílias" Height="250" Width="400" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Pasta com famílias (.rfa):" Grid.Row="0"/>
        <TextBox x:Name="input_dir" Grid.Row="1" Margin="0,5"/>
        <Button Content="Selecionar Pasta" Click="pick_input" Grid.Row="2" Margin="0,5" Width="100" HorizontalAlignment="Left"/>
        <Label Content="Pasta de saída (opcional):" Grid.Row="3" Margin="0,10,0,0"/>
        <TextBox x:Name="output_dir" Grid.Row="4" Margin="0,5"/>
        <Button Content="Selecionar Pasta de Saída" Click="pick_output" Grid.Row="5" Margin="0,5" Width="150" HorizontalAlignment="Left"/>
        <StackPanel Orientation="Horizontal" Grid.Row="6" Margin="0,10" HorizontalAlignment="Right">
            <Button Content="Restaurar Padrão" Click="restore_defaults" Width="100" Margin="0,0,5,0"/>
            <Button Content="Iniciar Limpeza" Click="save_and_run" Width="100" Margin="5,0"/>
        </StackPanel>
    </Grid>
</Window>