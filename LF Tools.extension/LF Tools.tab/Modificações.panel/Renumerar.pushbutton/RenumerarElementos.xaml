<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Renumerar Elementos - LF Tools" 
        Height="700" 
        Width="540" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F0F0">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Padding" Value="5,0"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Cabecalho -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="RENUMERAR ELEMENTOS" FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Foreground="#2C3E50"/>
            <TextBlock x:Name="TextBlock_InfoSelecao" 
                       Text="Elementos selecionados" FontSize="11" 
                       HorizontalAlignment="Center" Foreground="#27AE60" Margin="0,5,0,0" FontWeight="Bold"/>
        </StackPanel>
        
        <!-- Metodo de Ordenacao -->
        <GroupBox Grid.Row="1" Header="Ordenacao dos Elementos">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <RadioButton Grid.Row="0" x:Name="Radio_ManterOrdem" 
                            Content="Manter ordem atual da selecao" 
                            GroupName="Metodo" IsChecked="True" Margin="0,0,0,8"/>
                
                <RadioButton Grid.Row="1" x:Name="Radio_Reordenar" 
                            Content="Reordenar elementos por:" 
                            GroupName="Metodo" Margin="0,0,0,8"/>
                
                <ComboBox Grid.Row="2" x:Name="ComboBox_Criterio" 
                         Margin="25,0,0,0" IsEnabled="False">
                    <ComboBoxItem Content="ID do Elemento" IsSelected="True"/>
                    <ComboBoxItem Content="Nome (A-Z)"/>
                    <ComboBoxItem Content="Nivel"/>
                </ComboBox>
            </Grid>
        </GroupBox>

        <!-- Configuracoes de Numeracao -->
        <GroupBox Grid.Row="2" Header="Configuracoes de Numeracao">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Prefixo:"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="TextBox_Prefixo" Text="EL-"/>
                
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Numero Inicial:"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="TextBox_NumeroInicial" Text="1"/>
                
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Incremento:"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="TextBox_Incremento" Text="1"/>
                
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Digitos (zeros):"/>
                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                    <TextBox x:Name="TextBox_Digitos" Text="2" Width="60"/>
                    <TextBlock Text="Ex: 2 = 01, 02, 03..." Margin="10,0,0,0" 
                              FontSize="10" Foreground="#7F8C8D" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Parametro Alvo -->
        <GroupBox Grid.Row="3" Header="Parametro de Destino">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Parametro:"/>
                <ComboBox Grid.Row="0" Grid.Column="1" x:Name="ComboBox_Parametro"/>
            </Grid>
        </GroupBox>

        <!-- Previa da Numeracao -->
        <GroupBox Grid.Row="4" Header="Previa da Numeracao">
            <StackPanel>
                <TextBlock x:Name="TextBlock_Previa" Text="Aguardando configuracao..." 
                          FontWeight="Bold" Foreground="#27AE60" FontSize="12"/>
                <TextBlock x:Name="TextBlock_PreviewExample" 
                          Text="Exemplo: EL-01, EL-02, EL-03..." 
                          FontSize="10" Foreground="#7F8C8D" Margin="0,5,0,0"/>
                <TextBlock x:Name="TextBlock_Status" 
                          Text="Configure os parametros e clique em RENUMERAR" 
                          FontSize="10" Foreground="#3498DB" Margin="0,8,0,0" 
                          TextWrapping="Wrap" FontStyle="Italic"/>
            </StackPanel>
        </GroupBox>

        <!-- Botoes de Acao -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="Button_Aplicar" Content="RENUMERAR" 
                   Background="#27AE60" Foreground="White" Width="120" FontWeight="Bold"/>
            <Button x:Name="Button_Fechar" Content="Fechar" 
                   Background="#95A5A6" Foreground="White" Width="80"/>
        </StackPanel>
    </Grid>
</Window>