<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exportador PRO |  Luís Fernando" 
        Height="680" Width="950"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        Background="#F5F5F7">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#005A9E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#004578"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="DataGrid">
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9FAFB"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F0F0F0"/>
        </Style>
        
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#BBDEFB"/>
                    <Setter Property="Foreground" Value="#1565C0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#1565C0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F5F5F7"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="8,10"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel>
                <TextBlock Text="EXPORTADOR DO LUÍS" FontSize="26" Foreground="#2C3E50" FontWeight="Bold"/> 
                <TextBlock Text="Automação de Folhas (PDF + DWG) - Revit 2023/2024+" FontSize="12" Foreground="#7F8C8D" Margin="2,2,0,0"/>
            </StackPanel>
            
            <Border Grid.Column="1" Background="#E1E8ED" CornerRadius="4" Padding="10,5">
                <TextBlock Text=" Luís Fernando" Foreground="#34495E" FontWeight="Bold" FontStyle="Italic"/>
            </Border>
        </Grid>

        <TabControl Grid.Row="1" BorderThickness="0" Background="Transparent" Name="tab_Main">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Padding" Value="15,8"/>
                </Style>
            </TabControl.Resources>

            <TabItem Header="1. Seleção de Folhas">
                <Grid Background="White" Margin="0,10,0,0">
                    <Grid.Effect>
                        <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="2"/>
                    </Grid.Effect>
             
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Selecione as folhas na lista abaixo:" Margin="15,15,0,5" Foreground="#555"/>

                    <DataGrid Grid.Row="1" Name="dg_Sheets" AutoGenerateColumns="False" 
                              CanUserAddRows="False" CanUserDeleteRows="False"
                              HeadersVisibility="Column"
                              RowHeight="32" Margin="1,0,1,0">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Sel." Width="50">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" 
                                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        
                            <DataGridTextColumn Header="Número" Binding="{Binding Number}" Width="90" IsReadOnly="True" FontWeight="SemiBold" Foreground="#1565C0"/>
                            <DataGridTextColumn Header="Nome da Folha" Binding="{Binding Name}" Width="250" IsReadOnly="True" Foreground="#424242"/>
                            <DataGridTextColumn Header="Nome do Arquivo Final" Binding="{Binding FileName}" Width="*" IsReadOnly="True" Foreground="#757575"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border Grid.Row="2" Background="#F9FAFB" Padding="10">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="Total de Folhas Listadas:" Foreground="#7F8C8D"/>
                            <TextBlock Name="lbl_Count" Text="0" FontWeight="Bold" Margin="5,0,10,0" Foreground="#2C3E50"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="2. Configurações de Exportação">
                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="25">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" Opacity="0.08"/>
                        </Border.Effect>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <TextBlock Text="PDF" FontSize="20" FontWeight="Bold" Foreground="#E74C3C"/>
                                <TextBlock Text="(Nativo)" FontSize="12" Foreground="#999" VerticalAlignment="Bottom" Margin="5,0,0,3"/>
                            </StackPanel>
                            
                            <CheckBox Name="chk_ExportPDF" Content="Ativar Exportação PDF" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,15"/>
                            
                            <StackPanel Name="pnl_PDFSettings" Margin="0,5,0,0">
                                <TextBlock Text="Zoom e Posicionamento" Foreground="#95A5A6" FontWeight="Bold" Margin="0,10,0,8"/>
                                <RadioButton Name="rb_ZoomFit" Content="Fit to Page + Center" GroupName="Z" IsChecked="True" Margin="0,0,0,8"/>
                                <RadioButton Name="rb_Zoom100" Content="100% Zoom + Offset" GroupName="Z"/>
                                
                                <CheckBox Name="chk_HideScopes" Content="Ocultar Scope Boxes" Margin="0,20,0,0" IsChecked="True" Foreground="#34495E"/>
                                
                                <TextBlock Text="Parâmetro para Nome do Arquivo" Foreground="#95A5A6" FontWeight="Bold" Margin="0,20,0,8"/>
                                <ComboBox Name="cb_SheetParameters" Height="30" VerticalContentAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="25">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" Opacity="0.08"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="DWG" FontSize="20" FontWeight="Bold" Foreground="#F1C40F" Margin="0,0,0,20"/>
                            
                            <CheckBox Name="chk_ExportDWG" Content="Ativar Exportação DWG" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,15"/>
                            
                            <StackPanel Name="pnl_DWGSettings" Margin="0,5,0,0">
                                <TextBlock Text="Setup de Exportação (Revit)" Foreground="#95A5A6" FontWeight="Bold" Margin="0,10,0,8"/>
                                <ComboBox Name="cb_DWGSetups" Height="30" VerticalContentAlignment="Center"/>
                                
                                <Border Background="#FFF8E1" CornerRadius="4" Padding="10" Margin="0,20,0,0">
                                    <TextBlock Text="ℹ O DWG utilizará as configurações de Layers e XREFs do Setup selecionado." 
                                               TextWrapping="Wrap" FontSize="11" Foreground="#F39C12"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
            
            </TabControl>

        <Grid Grid.Row="2" Margin="0,25,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel VerticalAlignment="Center" Grid.Column="0">
                <TextBlock Text="Pasta de Destino:" Foreground="#7F8C8D" FontWeight="Bold" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="45"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Name="txt_OutputFolder" Height="35" IsReadOnly="True" Background="White" BorderBrush="#BDC3C7" VerticalContentAlignment="Center" Padding="5,0"/>
                    <Button Name="btn_SelectFolder" Content="..." Grid.Column="1" Margin="5,0,0,0" Background="#95A5A6"/>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0,0,0">
                <Button Name="btn_Start" Content="INICIAR EXPORTAÇÃO" FontSize="14" Width="180" Height="50" Background="#27AE60" BorderThickness="0">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="3" Color="#2ECC71" Opacity="0.4"/>
                    </Button.Effect>
                </Button>
                
                <Button Name="btn_Cancel" Content="CANCELAR" FontSize="13" Width="120" Height="50" Background="#E74C3C" BorderThickness="0" Visibility="Collapsed" Margin="10,0,0,0">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#C0392B" Opacity="0.3"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>