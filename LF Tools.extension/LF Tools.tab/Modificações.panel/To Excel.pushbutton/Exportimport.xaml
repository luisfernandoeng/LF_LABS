<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ferramentas Excel - LF Tools" 
        Height="620" 
        Width="520" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F7FA">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E8ED"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Background="#3498DB" Padding="15,12" Margin="-20,-20,-20,20" CornerRadius="0">
            <StackPanel>
                <TextBlock Text="EXPORTAR / IMPORTAR PARÂMETROS" FontSize="16" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Gerenciar parâmetros entre Revit e Excel" FontSize="11" 
                          Foreground="#ECF0F1" HorizontalAlignment="Center" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>
        
        <GroupBox Grid.Row="1" Header="EXPORTAR PARÂMETROS">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Origem:" FontWeight="SemiBold"/>
                <ComboBox Grid.Row="0" Grid.Column="1" x:Name="ComboBox_ExportMode">
                    <ComboBoxItem Content="Tabelas do Revit (Geral)" IsSelected="True"/>
                    <ComboBoxItem Content="Quadros de Cargas (Elétrica)"/>
                    <ComboBoxItem Content="Elementos na Vista Atual"/>
                    <ComboBoxItem Content="Todo o Projeto (Tipos)"/>
                    <ComboBoxItem Content="Todo o Projeto (Instâncias)"/>
                    <ComboBoxItem Content="Seleção Atual (Manual)"/>
                </ComboBox>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Selecionar:" FontWeight="SemiBold"/>
                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="ComboBox_SubSelection" IsEnabled="False">
                    </ComboBox>
                
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Salvar em:" FontWeight="SemiBold"/>
                <Grid Grid.Row="2" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" x:Name="TextBox_ExportPath" IsReadOnly="True" 
                            Background="#F8F9FA" Margin="0,0,8,8"/>
                    <Button Grid.Column="1" x:Name="Button_BrowseExport" Content="..." Width="35" 
                            Background="#ECF0F1" Foreground="#2C3E50" Margin="0,0,0,8"/>
                </Grid>
                
                <Button Grid.Row="3" Grid.Column="1" x:Name="Button_Export" Content="EXPORTAR PARA EXCEL" 
                       Background="#27AE60" Foreground="White" HorizontalAlignment="Stretch" Margin="0,8,0,0"/>
            </Grid>
        </GroupBox>

        <Separator Grid.Row="2" Margin="0,0,0,12" Background="#E1E8ED"/>

        <GroupBox Grid.Row="3" Header="IMPORTAR PARÂMETROS">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Arquivo:" FontWeight="SemiBold"/>
                <Grid Grid.Row="0" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" x:Name="TextBox_ImportPath" IsReadOnly="True" 
                            Background="#F8F9FA" Margin="0,0,8,8"/>
                    <Button Grid.Column="1" x:Name="Button_BrowseImport" Content="..." Width="35" 
                           Background="#ECF0F1" Foreground="#2C3E50" Margin="0,0,0,8"/>
                </Grid>
                
                <Button Grid.Row="1" Grid.Column="1" x:Name="Button_Import" Content="IMPORTAR DO EXCEL" 
                        Background="#E67E22" Foreground="White" HorizontalAlignment="Stretch" Margin="0,8,0,12"/>
                
                <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                       Background="#F8F9FA" BorderBrush="#E1E8ED" BorderThickness="1" 
                       CornerRadius="4" Padding="12">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="120">
                        <TextBlock x:Name="TextBlock_Status" 
                         Text="Selecione uma operação acima para começar."
                         TextWrapping="Wrap" FontSize="11" Foreground="#7F8C8D"/>
                    </ScrollViewer>
                </Border>
            </Grid>
        </GroupBox>

        <Grid Grid.Row="4" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="v2.1 - LF Tools" FontSize="10" 
                      Foreground="#95A5A6" VerticalAlignment="Center"/>
            
            <Button Grid.Column="1" x:Name="Button_Close" Content="FECHAR" Width="100" 
                   Background="#95A5A6" Foreground="White"/>
        </Grid>
    </Grid>
</Window>